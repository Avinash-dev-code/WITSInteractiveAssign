<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:id="@+id/Image"
            android:layout_width="100dp"
            android:layout_height="100dp"


            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/TextSection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <RelativeLayout
            android:id="@+id/TextSection"
            android:layout_width="298dp"
            android:layout_height="wrap_content"


            android:layout_marginEnd="0dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"

                android:layout_marginEnd="8dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"


                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AutorFName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Title"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="8dp"

                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toStartOf="@+id/AutorLName1"
                android:layout_toLeftOf="@+id/AutorLName1"
                android:text="TextView" />

            <TextView
                android:id="@+id/AutorLName1"

                android:layout_width="wrap_content"


                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="154dp"
                android:layout_marginRight="154dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/Erscheinungsjahr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/Title"
                android:layout_alignParentLeft="true"

                android:layout_alignParentRight="true"
                android:layout_marginTop="33dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/bookDetailContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainContent"
        />
</RelativeLayout>